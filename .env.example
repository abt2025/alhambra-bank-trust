# Alhambra Bank IBOSS Portfolio Tracker API Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=alhambra_bank

# Alternative PostgreSQL Configuration
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_postgres_password
# DB_NAME=alhambra_bank

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# IBOSS API Configuration
IBOSS_API_URL=https://api.iboss.com/v1
IBOSS_API_KEY=your-iboss-api-key
IBOSS_API_TIMEOUT=30000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=alhambra-bank-assets

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@alhambrabank.ky
SMTP_PASSWORD=your-email-password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Keys for Market Data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-iboss-callbacks

# Development Configuration
DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# ENABLE_CORS=false
# CORS_ORIGIN=https://alhambrabank.ky
